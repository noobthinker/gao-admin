<script>
    // replace 00:00:00
    $.each($("td"),function(){
        var fix = this.innerHTML
        fix.indexOf("00:00:00")>-1?this.innerHTML=fix.substring(0,fix.indexOf("00:00:00")):1
    })
</script>
</body>

</html>
